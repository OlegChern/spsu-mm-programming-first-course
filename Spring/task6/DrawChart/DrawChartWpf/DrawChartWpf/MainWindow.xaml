<Window x:Name="mainWindows" x:Class="DrawChartWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawChartWpf"
        mc:Ignorable="d"
        Title="Charts C#" Height="510" Width="500" MouseWheel="mainWindows_MouseWheel">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="62*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="gridImage" Margin="1" Width="Auto" Grid.ColumnSpan="2">
            <ComboBox x:Name="cmbCharts" 
                      Margin="5,5,5,0" 
                      VerticalAlignment="Top" 
                      SelectionChanged="ComboBox_SelectionChanged" 
                      Height="24" >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding title}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Image x:Name="imgChart" Margin="5,30,5,5" />
            <Label Content="Для изменения масштаба используйте колесико мыши" Margin="50,0,50,5" VerticalAlignment="Bottom"/>
        </Grid>

    </Grid>
</Window>
