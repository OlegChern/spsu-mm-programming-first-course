<Window x:Class="Chat.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat"
        mc:Ignorable="d"
        Title="LoginWindow" Height="100" Width="350" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="115*"/>
            <ColumnDefinition Width="56*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="NameClient" Grid.Column="0" FontSize=" 20" 
                 TextAlignment="Center" VerticalContentAlignment="Center"
                 MaxLength="16" Margin="5,5,5,5" GotKeyboardFocus="Name_GotKeyboardFocus" Text="Введите имя" />
        <Button Name="Login" Grid.Column="1" FontSize=" 20" 
                Content="Войти" Click="Login_Click" 
                Margin="5,5,5,5"/>
    </Grid>
</Window>
